HOST=0.0.0.0
PORT=1337
APP_KEYS=change-me-1,change-me-2,change-me-3,change-me-4
API_TOKEN_SALT=change-me-api-token-salt
ADMIN_JWT_SECRET=change-me-admin-jwt
TRANSFER_TOKEN_SALT=change-me-transfer-token-salt
JWT_SECRET=change-me-jwt
ENCRYPTION_KEY=change-me-encryption-key-32-chars-min

# Local development (SQLite by default)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Production database example (Railway Postgres)
# DATABASE_CLIENT=postgres
# DATABASE_URL=postgresql://user:password@host:port/database
# DATABASE_SSL=true
# DATABASE_SCHEMA=public

# DigitalOcean Spaces
# DO_SPACE_KEY=your-space-access-key
# DO_SPACE_SECRET=your-space-secret
# DO_SPACE_BUCKET=your-bucket-name
# DO_SPACE_ENDPOINT=https://<region>.digitaloceanspaces.com
# DO_SPACE_REGION=<region>
# Optional CDN URL and root path
# DO_SPACE_CDN_URL=https://<bucket>.<region>.cdn.digitaloceanspaces.com
# DO_SPACE_ROOT_PATH=uploads

# Comma-separated list of allowed origins for API requests
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Optional toggles
NODE_ENV=development
STRAPI_TELEMETRY_DISABLED=true


